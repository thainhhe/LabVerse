<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive authentication data -->
        <exclude domain="sharedpref" path="LabVerseAuth" />

        <!-- Exclude temporary cache files -->
        <exclude domain="cache" />

        <!-- Exclude downloaded PDF files (too large for backup) -->
        <exclude domain="external" path="pdfs/" />

        <!-- Include user preferences -->
        <include domain="sharedpref" path="user_preferences" />

        <!-- Include app database -->
        <include domain="database" path="labverse_database.db" />

        <!-- Include exported annotations -->
        <include domain="external" path="annotations/" />
    </cloud-backup>

    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="sharedpref" />
        <include domain="database" />
        <include domain="external" path="annotations/" />
        <include domain="external" path="exports/" />

        <!-- Exclude large PDF files from device transfer -->
        <exclude domain="external" path="pdfs/" />

        <!-- Exclude temporary cache -->
        <exclude domain="cache" />
    </device-transfer>
</data-extraction-rules>